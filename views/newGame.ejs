<%- include('./_header.ejs') %>

<h1>New Game</h1>

<form action="/newGame" method="POST">

    <div>
        <label for="password">password</label>
        <input type="password" id="pass" name="pass" required>
    </div>
    <div>
        <label>Game Name</label>
        <input type="text" id="g_name" name="g_name" required>
    </div>
    <div>
        <label>Release Date</label>
        <input type="date" id="release_date" name="release_date" required>
    </div>
    <div>
        <label>Run Type</label>
        <input type="text" id="run_type" name="run_type" required>
        <button type="button" id="run_" onclick="addRun()">Another Run Type</button>
    </div>
    <div>
        <label>Game Image</label>
        <input type="text" id="game_image" name="game_image" required>
    </div>
    <button type="submit">Register New Game</button>
</form>

